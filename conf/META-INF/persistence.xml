<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="com.simplehosting.relation.jpa">
        <description>
            Persistence unit for the relation database
        </description>

        <class>business.entities.User</class>
        <class>business.entities.GameServer</class>
        <class>business.entities.GameServerPort</class>
        <class>business.entities.Host</class>
        <class>business.entities.FileBucket</class>
        <class>business.entities.UserFileStorage</class>
        <class>business.entities.Game</class>
        <class>business.entities.Tariff</class>
        <class>business.entities.UserSession</class>
        <class>business.entities.Location</class>
        <class>business.entities.TariffSpecification</class>
        <class>business.entities.TariffSpecificationPort</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/simplehosting?user=postgres&amp;password=postgres" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="postgres" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.jdbc.time_zone" value="UTC"/>
            <property name="hibernate.connection.provider_disables_autocommit" value="false"/>
	        <property name="hibernate.connection.pool_size" value="10" />
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>

            <property name="hibernate.c3p0.min_size" value="5"/>
            <property name="hibernate.c3p0.max_size" value="30"/>
            <property name="hibernate.c3p0.acquire_increment" value="5"/>
            <property name="hibernate.c3p0.timeout" value="1800"/>
            
        </properties>

    </persistence-unit>

</persistence>
